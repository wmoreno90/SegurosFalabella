@model IEnumerable<Falabella.Models.ProductosViewModel>

@{
    ViewBag.Title = "Lista de productos";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Inicio", "Inicio")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NombreAseguradora)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Producto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Prima)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cobertura)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Asistencias)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NombreAseguradora)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Producto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Prima)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cobertura)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Asistencias)
        </td>
        <td>
            @Html.ActionLink("Editar", "EditProduct", new { id = item.Id }) |
            @Html.ActionLink("Eliminar", "DeleteProduct", new { id = item.Id })
        </td>
    </tr>
}

</table>
